<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeLayoutActivity">

    <ImageView
        android:id="@+id/imageViewFoto1"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewTitulo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageViewFoto1"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="22dp"
        android:text="Titulo"
        android:layout_toEndOf="@+id/imageViewFoto1"
        android:layout_toRightOf="@+id/imageViewFoto1" />

    <TextView
        android:id="@+id/textViewModeloCoche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textViewTitulo1"
        android:layout_alignStart="@+id/textViewTitulo1"
        android:layout_below="@id/textViewTitulo1"
        android:layout_marginTop="8dp"
        android:text="Modelo" />

</RelativeLayout>